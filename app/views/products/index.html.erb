<div id="product_list">
  <% title "Продукты" %>
  <h2><%= yield(:title) %></h2>
  <%= link_to 'Новый продукт', new_product_path %>
  <% form_tag products_path, :method => :get, :remote => true do %>
    <p>
       <%= text_field_tag :search, params[:search] %>
       <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>

  		<%= render @products %>
</div>

