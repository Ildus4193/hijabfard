<% title "Покупатели" %>
<h1>Покупатели</h1>

<table id="orders_table" cellpadding = 0 cellspacing = 0>
  <tr>
    <th>Имя</th>
    <th>Адрес</th>
    <th>Email</th>
    <th>Телефон</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.phone %></td>
    <td><%= link_to 'Показать', order %></td>
    <td><%= link_to 'Удалить', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= will_paginate @orders %></p>
<script "text/javascript">
  $('#orders_table tr').hover(
  function() {$(this).css({ background: '#cccccc'})},
  function() {$(this).css({ background: '#fff'})} );
</script>
