<p id="notice"><%= notice %></p>
<h2><%= @news.title %></h2>
<div id="news_content">
  <%= image_tag(@news.avatar.url) %>
<p>
  <%= raw @news.description %>
</p>
</div>
<% if admin_signed_in?  %>
<%= link_to 'Редактировать', edit_news_path(@news) %> |
<%= link_to 'Назад', news_index_path %>
<% end %>
